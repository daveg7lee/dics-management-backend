{
  "name": "dics-management-backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist && rimraf *.tsbuildinfo",
    "build": "nest build",
    "migrate:prod": "npx prisma migrate deploy",
    "migrate:dev": "npx prisma migrate dev",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "cross-env NODE_ENV=dev nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "cross-env NODE_ENV=production node dist/main",
    "start:migrate:prod": "prisma db push && npm run start:prod",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "cross-env NODE_ENV=test jest",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:cov": "cross-env NODE_ENV=test jest --coverage",
    "test:debug": "cross-env NODE_ENV=test node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "cross-env NODE_ENV=test jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@adminjs/express": "^5.0.1",
    "@adminjs/nestjs": "^5.0.1",
    "@adminjs/prisma": "^3.0.1",
    "@fastify/cors": "^8.0.0",
    "@nestjs/apollo": "^10.1.7",
    "@nestjs/common": "9.0.1",
    "@nestjs/core": "9.0.1",
    "@nestjs/graphql": "10.0.18",
    "@nestjs/platform-express": "^9.2.1",
    "@nestjs/platform-fastify": "9.0.1",
    "@prisma/client": "4.0.0",
    "@tiptap/prosemirror-tables": "^1.1.3",
    "adminjs": "^6.7.0",
    "apollo-server-core": "^3.11.1",
    "apollo-server-express": "^3.11.1",
    "aws-sdk": "^2.1171.0",
    "bcrypt": "^5.0.1",
    "class-transformer": "0.5.1",
    "class-validator": "0.13.2",
    "cross-env": "^7.0.3",
    "express-formidable": "^1.2.0",
    "express-session": "^1.17.3",
    "jsonwebtoken": "^8.5.1",
    "mercurius": "10.1.0",
    "nodejs-nodemailer-outlook": "^1.2.4",
    "quill": "^1.3.7",
    "reflect-metadata": "0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "7.4.0",
    "webpack": "^5.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^9.0.2",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.0.0",
    "@types/source-map-support": "^0",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "graphql": "^16.6.0",
    "jest": "^27.0.6",
    "prettier": "^2.3.2",
    "prisma": "4.0.0",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>/$1"
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.service.ts"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
